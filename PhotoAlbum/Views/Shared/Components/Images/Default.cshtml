@model IEnumerable<PhotoAlbum.Models.Images>

@{
    ViewData["Title"] = "Default";
}
    <div class="row card">
        @foreach (var item in Model)
        {
        <div class="col s12 m4 14 divLeft">
            <img src="@Url.Content(item.Path)" class="materialboxed responsive-img card" />
            <a class="btn-floating btn-small red darken-2 waves-effect waves-light delete modal-trigger textDiv" data-target="modalDel" onclick="Delete(@item.Id)"><i class="material-icons">delete</i></a>
            <div class="textDiv">
            </div>
        </div>
        }
    </div>


<div id="modalDel" class="modal">
    <div class="modal-content">
        <h4>Confirmar exclusão</h4>
        <p>Deseja prosseguir com a exclusão da foto?</p>
    </div>
    <div class="modal-footer">
        <a class="modal-close waves-effect waves-light btn-small red darken-3 btn-floating"><i class="material-icons">close</i></a>
        <a class="modal-close waves-effect waves-light btn-small green darken-3 btn-floating btnConf"><i class="material-icons">check</i></a>
    </div>
</div>

